<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".KeynoteSpeakerActivity" >

    <ImageView
        android:id="@+id/keynote_speaker_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/keynote_speaker_photo_description" />

    <TextView
        android:id="@+id/keynote_country_label"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keynote_speaker_photo"
        android:paddingTop="22dp"
        android:text="@string/keynote_country"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/keynote_country"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keynote_speaker_photo"
        android:layout_toRightOf="@id/keynote_country_label"
        android:paddingLeft="4.4dp"
        android:paddingTop="22dp" />

    <TextView
        android:id="@+id/keynote_organization_label"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keynote_country_label"
        android:paddingTop="13.2dp"
        android:text="@string/keynote_organization"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/keynote_organization"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keynote_country_label"
        android:layout_toRightOf="@id/keynote_organization_label"
        android:paddingLeft="4.4dp"
        android:paddingTop="13.2dp" />

    <TextView
        android:id="@+id/keynote_email_label"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keynote_organization"
        android:paddingTop="13.2dp"
        android:text="@string/keynote_email"
        android:textStyle="bold" />

  

    <RelativeLayout
        android1:id="@+id/email_layout"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignTop="@+id/keynote_email_label"
        android1:layout_toRightOf="@id/keynote_email_label"
        android1:paddingTop="13.2dp" >

        <ImageView
            android1:id="@+id/email_image"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignParentLeft="true"
            android1:layout_centerVertical="true"
            android1:paddingLeft="17.6dp"
            android1:src="@drawable/email" />

        <TextView
            android1:id="@+id/keynote_email"
            style="@android:style/TextAppearance.Medium"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_toRightOf="@id/email_image"
            android1:text="" />
    </RelativeLayout>

</RelativeLayout>