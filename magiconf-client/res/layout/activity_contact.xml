<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContactActivity" >


    <TextView
        android1:id="@+id/contact_country_label"
        style="@android:style/TextAppearance.Medium"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/workplace_label"
        android1:paddingTop="13.2dp"
        android1:text="@string/contact_country_label"
        android1:textStyle="bold" />

    <TextView
        android1:id="@+id/contact_country"
        style="@android:style/TextAppearance.Medium"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBottom="@+id/contact_country_label"
        android1:layout_alignRight="@+id/contact_email"
        android1:layout_toRightOf="@+id/contact_country_label"
        android1:paddingLeft="13.2dp"
        android1:paddingTop="13.2dp"
        android1:text="@string/contact_country" />

    <TextView
        android1:id="@+id/workplace_label"
        style="@android:style/TextAppearance.Medium"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/contact_photo"
        android1:paddingTop="13.2dp"
        android1:text="@string/workplace_label"
        android1:textStyle="bold" />

    <TextView
        android1:id="@+id/contact_workplace"
        style="@android:style/TextAppearance.Medium"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignTop="@+id/workplace_label"
        android1:layout_toRightOf="@+id/contact_photo"
        android1:paddingLeft="13.2dp"
        android1:paddingTop="13.2dp"
        android1:text="" />

    <TextView
        android1:id="@+id/contact_email_label"
        style="@android:style/TextAppearance.Medium"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/contact_country_label"
        android1:layout_below="@+id/contact_country_label"
        android1:paddingTop="13.2dp"
        android1:text="@string/author_email"
        android1:textStyle="bold" />

    <RelativeLayout
        android1:id="@+id/email_layout"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignTop="@+id/contact_email_label"
        android1:layout_toRightOf="@id/contact_email_label"
        android1:paddingTop="13.2dp" >

        <ImageView
            android1:id="@+id/email_image"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignParentLeft="true"
            android1:layout_centerVertical="true"
            android1:paddingLeft="17.6dp"
            android1:src="@drawable/email" />

        <TextView
            android1:id="@+id/contact_email"
            style="@android:style/TextAppearance.Medium"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_toRightOf="@id/email_image"
            android1:text="" />
    </RelativeLayout>

    <TextView
        android1:id="@+id/contact_phone_label"
        style="@android:style/TextAppearance.Medium"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/contact_email_label"
        android1:layout_below="@+id/contact_email_label"
        android1:paddingTop="13.2dp"
        android1:text="@string/phone_label"
        android1:textStyle="bold" />

    <RelativeLayout
        android1:id="@+id/phone_layout"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignTop="@+id/contact_phone_label"
        android1:layout_toRightOf="@id/contact_phone_label"
        android1:paddingTop="13.2dp" >

        <ImageView
            android1:id="@+id/phone_image"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignParentLeft="true"
            android1:layout_alignParentTop="true"
            android1:paddingLeft="17.6dp"
            android1:src="@drawable/device_call" />

        <TextView
            android1:id="@+id/phone"
            style="@android:style/TextAppearance.Medium"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_toRightOf="@id/phone_image"
            android1:text="" />
    </RelativeLayout>

    <ImageView
        android1:id="@+id/contact_photo"
        android1:layout_width="120dp"
        android1:layout_height="120dp"
        android1:layout_alignBottom="@+id/world"
        android1:layout_alignLeft="@+id/workplace_label"
        android1:contentDescription="@string/contact_photo_description" />

    <ImageView
        android1:id="@+id/world3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_marginTop="30dp"
        android1:layout_toRightOf="@+id/contact_photo"
        android1:contentDescription="@+id/content_world_description3"
        android1:paddingLeft="13.2dp"
        android1:src="@drawable/facebook" />

    <ImageView
        android1:id="@+id/world"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/world3"
        android1:layout_below="@+id/world3"
        android1:layout_marginTop="21dp"
        android1:layout_toRightOf="@id/contact_photo"
        android1:contentDescription="@+id/content_world_description"
        android1:paddingLeft="13.2dp"
        android1:src="@drawable/linkedin" />

</RelativeLayout>