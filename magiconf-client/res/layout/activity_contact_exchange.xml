<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ContactExchangeActivity" >

    <RelativeLayout
        android:id="@+id/start_exchange_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" >

        <ImageView
            android:id="@+id/start_contact_exchange_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/start_contact_exchange_label"
            android:src="@drawable/start_exchange_button" />

        <TextView
            android:id="@+id/start_contact_exchange"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_contact_exchange_img"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/start_contact_exchange_label"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/insert_pin_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_exchange_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" >

        <TextView
            android:id="@+id/insert_contact_pin"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/insert_pin_img"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/insert_contact_pin_label"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/insert_pin_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/insert_contact_pin_label"
            android:src="@drawable/insert_pin_button" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/insert_pin_group"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" >

        <ImageView
            android:id="@+id/add_contact_email_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/insert_pin_group"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/add_contact_email_label"
            android:src="@drawable/add_email_button" />

        <TextView
            android:id="@+id/add_contact_email"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_contact_email_img"
            android:layout_centerVertical="true"
            android:text="@string/add_contact_email_label"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>