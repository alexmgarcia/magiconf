<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CityActivity" >

    <TextView
        android:id="@+id/city_name"
        style="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/sights_view"
        android:gravity="center"
        android:textStyle="bold"
        tools:ignore="SelectableText" />

    <ImageView
        android:id="@+id/city_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/city_name"
        android:contentDescription="@string/city_photo_description"
        android:paddingTop="22dp" />

    <ExpandableListView
        android:id="@+id/sights_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/city_photo"
        android:paddingLeft="13.2dp" >
    </ExpandableListView>

</RelativeLayout>