<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MemberActivity" >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/member_photo_description" />

    <TextView
        android:id="@+id/role"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo"
        android:layout_alignLeft="@id/photo"
        android:paddingTop="22dp" />

    <TextView
        android:id="@+id/country_label"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/photo"
        android:paddingLeft="13.2dp"
        android:text="@string/member_country_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/country"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/country_label"
        android:paddingLeft="4.4dp" />

    <TextView
        android:id="@+id/organization_label"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/country_label"
        android:layout_toRightOf="@id/photo"
        android:paddingLeft="13.2dp"
        android:paddingTop="4.4dp"
        android:text="@string/member_organization_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/organization"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/organization_label"
        android:layout_toRightOf="@id/photo"
        android:paddingLeft="13.2dp"
        android:paddingTop="4.4dp" />

    <TextView
        android:id="@+id/email_label"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/organization"
        android:layout_toRightOf="@id/photo"
        android:paddingLeft="13.2dp"
        android:paddingTop="4.4dp"
        android:text="@string/member_email_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/organization"
        android:layout_toRightOf="@id/email_label"
        android:paddingLeft="4.4dp"
        android:paddingTop="4.4dp" />

</RelativeLayout>