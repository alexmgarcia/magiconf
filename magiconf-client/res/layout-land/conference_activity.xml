<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConferenceActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.55" >

            <TextView
                android:id="@+id/title"
                style="@android:style/TextAppearance.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/conference_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edition"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:gravity="center"
                android:paddingTop="4.4dp"
                android:text="@string/conference_edition"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/conference_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/edition"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/conference_photo_description"
                android:gravity="center"
                android:paddingTop="4.4dp" />

            <TextView
                android:id="@+id/conference_beginning_label"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_photo"
                android:paddingTop="4.4dp"
                android:text="@string/conference_beginning_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conference_beginning"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_photo"
                android:layout_toRightOf="@id/conference_beginning_label"
                android:paddingLeft="4.4dp"
                android:paddingTop="4.4dp"
                android:text="@string/conference_beginning" />

            <TextView
                android:id="@+id/conference_ending_label"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_beginning"
                android:paddingTop="4.4dp"
                android:text="@string/conference_ending_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conference_ending"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_beginning"
                android:layout_toRightOf="@id/conference_ending_label"
                android:paddingLeft="4.4dp"
                android:paddingTop="4.4dp"
                android:text="@string/conference_ending" />

            <TextView
                android:id="@+id/conference_localization_label"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_ending"
                android:paddingTop="4.4dp"
                android:text="@string/conference_localization_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conference_place"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_localization_label"
                android:paddingLeft="4.4dp"
                android:text="@string/conference_place" />

            <TextView
                android:id="@+id/conference_gps_label"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_place"
                android:paddingTop="4.4dp"
                android:text="@string/conference_gps_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conference_gps"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_gps_label"
                android:paddingLeft="4.4dp"
                android:text="@string/conference_gps" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_gps_label"
                android:layout_toRightOf="@id/conference_gps"
                android:paddingLeft="4.4dp"
                android:src="@drawable/map" />

            <TextView
                android:id="@+id/conference_website_label"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_gps"
                android:paddingTop="4.4dp"
                android:text="@string/conference_website_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conference_website"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_website_label"
                android:paddingLeft="4.4dp"
                android:paddingTop="4.4dp"
                android:text="@string/view_in_browser" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_website_label"
                android:layout_toRightOf="@id/conference_website"
                android:paddingLeft="4.4dp"
                android:src="@drawable/website" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.45" >

            <TextView
                android:id="@+id/conference_description_label"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4.4dp"
                android:text="@string/conference_description_label"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/conference_description"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/conference_description_label"
                android:text="@string/conference_description" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>