<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".KeynoteSpeakerActivity" >

    <ImageView
        android:id="@+id/keynote_speaker_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/keynote_speaker_photo_description" />

    <TextView
        android:id="@+id/keynote_country_label"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/keynote_speaker_photo"
        android:paddingLeft="13.2dp"
        android:text="@string/keynote_country"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/keynote_country"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/keynote_country_label"
        android:paddingLeft="4.4dp" />

    <TextView
        android:id="@+id/keynote_organization_label"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keynote_country_label"
        android:layout_toRightOf="@id/keynote_speaker_photo"
        android:paddingLeft="13.2dp"
        android:paddingTop="4.4dp"
        android:text="@string/keynote_organization"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/keynote_organization"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keynote_country_label"
        android:layout_toRightOf="@id/keynote_organization_label"
        android:paddingLeft="4.4dp"
        android:paddingTop="4.4dp" />

    <TextView
        android:id="@+id/keynote_email_label"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keynote_organization"
        android:layout_toRightOf="@id/keynote_speaker_photo"
        android:paddingLeft="13.2dp"
        android:paddingTop="4.4dp"
        android:text="@string/keynote_email"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/email_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/keynote_email_label"
        android:layout_toRightOf="@id/keynote_email_label" >

        <ImageView
            android:id="@+id/email_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="17.6dp"
            android:src="@drawable/email" />

        <TextView
            android:id="@+id/keynote_email"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/email_image"
            android:text="" />
    </RelativeLayout>


</RelativeLayout>